<% layout('layout') %>
<div class="container">
  <form method="post" action="/users" class="form-signin">
    <input type="text" name="username" class="form-control" placeholder="아이디" required autofocus>
    <input type="password" name="pass" class="form-control" placeholder="비밀번호" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit">로그인</button>
  </form>
</div> <!-- /container -->
